<section class="About">
	<h2 class="About__title">{{ about.title }}</h2>

	<picture class="About__picture">
		<source
			media="(max-width: 599px)"
			srcset="
				{{ about.img.mobile.xsmall.url }} {{ about.img.mobile.xsmall.size }}w,
				{{ about.img.mobile.small.url }} {{ about.img.mobile.small.size }}w,
				{{ about.img.mobile.medium.url }} {{ about.img.mobile.medium.size }}w,
				{{ about.img.mobile.large.url }} {{ about.img.mobile.large.size }}w
			"
			sizes="80vw"
		>
		<source
			media="(min-width: 600px) and (max-width: 999px)"
			srcset="
				{{ about.img.tablet.small.url }},
				{{ about.img.tablet.medium.url }} 1.5x,
				{{ about.img.tablet.large.url }} 2x
			"
		>
		<source
			media="(min-width: 1000px)"
			srcset="
				{{ about.img.desktop.small.url }},
				{{ about.img.desktop.medium.url }} 1.5x,
				{{ about.img.desktop.large.url }} 2x
			"
		>
		<img class="About__img js-lazy-img" src="/assets/placeholder.png" data-src="{{ about.img.mobile.small.url }}" alt="{{ about.img.alt }}">
	</picture>

	<div class="About__content rte">
		{{ about.content | safe }}
	</div>
</section>

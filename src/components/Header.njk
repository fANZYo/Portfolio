<section class="Header">
	<picture class="Header__picture">
		<source media="(max-width: 799px)" srcset="{{ header.img.small }}">
		<source media="(min-width: 800px)" srcset="{{ header.img.large }}">
		<img class="Header__img" src="{{ header.img.small }}" alt="{{ header.img.alt }}">
	</picture>

	<div class="Header__content">
		<h1 class="Header__title">
			{{ header.title | safe }}
			<span class="Header__highlight">{{ header.titleHL | safe }}</span>
		</h1>

		<p class="Header__blurb">{{ header.blurb | safe }}</p>
	</div>
</section>

<section class="Testimonials" aria-label="{{ testimonials.title }}">
	<div class="Testimonials__container">
		<h2 class="Testimonials__title">{{ testimonials.title }}</h2>

		<ul class="Testimonials__list">
			{% for testimonial in testimonials.items %}
				<li class="Testimonials__item">
					<figure>
						<blockquote class="Testimonials__quote rte">
							{{ testimonial.content | safe }}
						</blockquote>
						<figcaption class="Testimonials__caption">
							<cite>â€”{{ testimonial.author }},<br /> {{ testimonial.role }}</cite>
						</figcaption>
					</figure>
				</li>
			{% endfor %}
		</ul>

		<a class="Testimonials__cta" href="{{ testimonials.cta.url }}">{{ testimonials.cta.label }}</a>
	</div>
</section>

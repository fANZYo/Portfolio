<section class="Projects">
	<h2 class="Projects__title">{{ projects.title }}</h2>

	<ul>
		{% for project in projects.items %}
			<li class="Projects__item">
				<h3 class="Projects__item-title">{{ project.title }}</h3>
				<picture class="Projects__illustration">
					<source
						media="(max-width: 719px)"
						data-srcset="
							{{ project.img.mobile.small.url }} {{ project.img.mobile.small.size }}w,
							{{ project.img.mobile.medium.url }} {{ project.img.mobile.medium.size }}w,
							{{ project.img.mobile.large.url }} {{ project.img.mobile.large.size }}w
						"
					>
					<source
						media="(min-width: 720px) and (max-width: 1100px)"
						data-srcset="
							{{ project.img.tablet.small.url }},
							{{ project.img.tablet.medium.url }} 1.5x,
							{{ project.img.tablet.large.url }} 2x
						"
					>
					<source
						media="(min-width: 1100px)"
						data-srcset="
							{{ project.img.desktop.small.url }},
							{{ project.img.desktop.medium.url }} 1.5x,
							{{ project.img.desktop.large.url }} 2x
						"
					>
					<img class="Projects__img js-lazy-img" src="/assets/placeholder.png" alt="{{ project.img.alt }}">
				</picture>
				<div class="Projects__content">
					<p class="Projects__item-blurb">{{ project.blurb }}</p>
					<a class="Projects__item-link" href="{{ project.url }}">
						Go to Site 

						{% set className = "Projects__item-external" %}
						{% include "../img/external.svg" %}
					</a>
				</div>
			</li>
		{% endfor %}
	</ul>
</section>
